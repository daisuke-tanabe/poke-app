generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Pokemon {
  id          Int           @id @default(autoincrement())
  name_ja     String
  name_kana   String
  name_en     String
  forms       PokemonForm[]
}

model PokemonForm {
  id          Int           @id @default(autoincrement())
  pokemon_id  Int
  name_ja     String
  form_name   String
  pokemon     Pokemon       @relation(fields: [pokemon_id], references: [id], onDelete: Cascade)
  pokedexEntries PokedexEntry[]
  typeEntries    TypeEntry[]
}

model Region {
  id        Int       @id
  name_ja   String
  name_en   String
  slug      String    @unique
  pokedexes Pokedex[]
}

model Pokedex {
  id        Int            @id
  region_id Int
  name_ja   String
  name_en   String
  slug      String         @unique
  region    Region         @relation(fields: [region_id], references: [id])
  entries   PokedexEntry[]
}

model PokedexEntry {
  id              Int           @id @default(autoincrement())
  pokedex_id      Int
  pokemon_form_id Int
  entry_number    Int
  pokedex         Pokedex       @relation(fields: [pokedex_id], references: [id], onDelete: Cascade)
  pokemonForm     PokemonForm   @relation(fields: [pokemon_form_id], references: [id], onDelete: Cascade)
  typeEntries     TypeEntry[]
  @@unique([pokedex_id, entry_number, pokemon_form_id])
}

model Type {
  id          Int         @id
  name_ja     String
  name_en     String
  slug        String      @unique
  typeEntries TypeEntry[]
}

model TypeEntry {
  id               Int          @id @default(autoincrement())
  pokedex_entry_id Int
  type_id          Int
  pokemon_form_id  Int
  type             Type         @relation(fields: [type_id], references: [id], onDelete: Cascade)
  pokedexEntry     PokedexEntry @relation(fields: [pokedex_entry_id], references: [id], onDelete: Cascade)
  pokemonForm      PokemonForm  @relation(fields: [pokemon_form_id], references: [id], onDelete: Cascade)
  @@unique([pokedex_entry_id, type_id])
}
